<script src="//vk.com/js/api/openapi.js" type="text/javascript"></script>

<div ng-app="geosearch">
    <div ng-controller="geosearchController" >

        <div class="centered">
            <input type="button" ng-click="send()" value="send">

            <table class="table table-striped table-bordered table-condensed">
                <tr ng-repeat="x in chain">
                    <td> 
                    <input type="textarea" ng-model="$parent.firstId" ng-change="check()">
                    </td>
                    <td ng-repeat="y in x" > 
                        <div ng-if="validObject">
                        {{y.first_name}} {{y.last_name}}
                        {{y.uid}}
                        </div>
                    </td>
                    <td>  
                    <input type="textarea" ng-model="$parent.secondId" ng-change="check()">
                    </td>
                </tr>
            </table>

        </div>
    </div>
</div>
