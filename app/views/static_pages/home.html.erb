<script src="//vk.com/js/api/openapi.js" type="text/javascript"></script>


<div ng-app="geosearch">
    <div ng-controller="geosearchController" >


<div class="info"> 

<div ng-show="loading" class="loading">
Loading...
<img src="https://s3.amazonaws.com/clickmeter.com/Web/static/small-loader.gif"/>
</div>

</div>


        <div class="centered">
            <input id="sendButton"  type="button" ng-click="send()" value="send">

            <table class="table table-striped table-bordered table-condensed">
                <tr ng-repeat="x in chain">
                    <td> 
                    <input type="textarea" ng-model="$parent.user1.id" ng-change="check( $parent.user1 )">
                    valid: {{$parent.user1.valid}}
                    </td>
                    <td ng-repeat="y in x" > 
                        <div ng-if="validObject">
                        {{y.first_name}} {{y.last_name}}
                        {{y.uid}}
                        </div>
                    </td>
                    <td>  
                    <input type="textarea" ng-model="$parent.user2.id" ng-change="check( $parent.user2 )">
                    valid: {{$parent.user2.valid}}
                    </td>
                </tr>
            </table>

        </div>
    </div>
</div>
